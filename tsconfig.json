{
  "extends": "./packages/eslint-plugin/configs/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "tests/**/*",
    "packages/*/src/**/*",
    "packages/*/bin/**/*",
    "packages/*/tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "exploratories/**/*",
    "tests/tmp/**/*",
    "jest.*.js",
    ".test-tmp/**/*",
    "v1/**/*"
    //    "**/*.test.ts",
    //    "**/*.spec.ts"
  ]
}