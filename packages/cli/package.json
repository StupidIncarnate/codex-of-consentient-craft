{
  "name": "@dungeonmaster/cli",
  "version": "0.1.0",
  "description": "CLI for Dungeonmaster quest management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dungeonmaster": "./dist/bin/dungeonmaster.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run bundle",
    "bundle": "npx esbuild dist/src/startup/start-cli.js --bundle --platform=node --format=cjs --outfile=dist/bin/dungeonmaster.js --external:@dungeonmaster/* --external:zod --define:__BUILD_TIMESTAMP__=\"\\\"$(date +'%b %d %I:%M %p')\\\"\"",
    "postbuild": "chmod +x dist/bin/*.js dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "dungeonmaster-ward run --only test",
    "lint": "dungeonmaster-ward run --only lint",
    "typecheck": "dungeonmaster-ward run --only typecheck",
    "ward": "dungeonmaster-ward run"
  },
  "keywords": [
    "dungeonmaster",
    "cli"
  ],
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@dungeonmaster/orchestrator": "*",
    "@dungeonmaster/server": "*",
    "@dungeonmaster/shared": "*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@dungeonmaster/testing": "*",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/debug": "^4.1.12",
    "@types/eslint": "^9.0.0",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}