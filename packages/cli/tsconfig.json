{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationMap": true,
    "declaration": true,
    "noEmit": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": [
      "../../node_modules/@types",
      "../../@types"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node"
    }
  },
  "include": [
    "src/**/*",
    "*.ts"
  ]
}
