{
  "name": "@dungeonmaster/testing",
  "version": "0.1.0",
  "description": "Testing utilities and helpers for Dungeonmaster projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "node-pty": "^1.1.0"
  }
}
