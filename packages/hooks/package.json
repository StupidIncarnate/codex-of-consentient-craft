{
  "name": "@dungeonmaster/hooks",
  "version": "0.1.0",
  "description": "Claude hooks for dungeonmaster - sanitization and process escape handling",
  "bin": {
    "dungeonmaster-session-start-hook": "./dist/startup/start-session-start-hook.js",
    "dungeonmaster-pre-edit-lint": "./dist/startup/start-pre-edit-hook.js",
    "dungeonmaster-pre-bash": "./dist/startup/start-pre-bash-hook.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "dungeonmaster-ward run --only test",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "lint": "dungeonmaster-ward run --only lint",
    "typecheck": "dungeonmaster-ward run --only typecheck"
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "keywords": [
    "claude",
    "hooks",
    "sanitization",
    "process-escape"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@dungeonmaster/testing": "*"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0"
  },
  "dependencies": {
    "@dungeonmaster/shared": "*",
    "debug": "^4.4.1",
    "zod": "^3.25.76"
  }
}
