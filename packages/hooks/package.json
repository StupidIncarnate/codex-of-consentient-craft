{
  "name": "@questmaestro/hooks",
  "version": "0.1.0",
  "description": "Claude hooks for questmaestro - sanitization and process escape handling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "questmaestro-sanitation-hook": "./dist/sanitation-hook.js",
    "questmaestro-session-start-hook": "./dist/session-start-hook.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/sanitation-hook.js && chmod +x dist/session-start-hook.js",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "test:unit": "jest",
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "keywords": [
    "claude",
    "hooks",
    "sanitization",
    "process-escape"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@questmaestro/testing": "^0.1.0",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "zod": "^3.25.76"
  }
}
