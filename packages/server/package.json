{
  "name": "@dungeonmaster/server",
  "version": "0.1.0",
  "description": "HTTP and WebSocket server for Dungeonmaster web UI",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/startup/start-server.ts",
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "dungeonmaster-ward run --only test",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "typecheck": "dungeonmaster-ward run --only typecheck",
    "lint": "dungeonmaster-ward run --only lint",
    "ward": "dungeonmaster-ward run"
  },
  "dependencies": {
    "@dungeonmaster/orchestrator": "*",
    "@dungeonmaster/shared": "*",
    "glob": "^10.0.0",
    "hono": "^4.0.0",
    "@hono/node-server": "^1.0.0",
    "@hono/node-ws": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@dungeonmaster/testing": "*",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
