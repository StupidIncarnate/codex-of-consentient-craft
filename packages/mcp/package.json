{
  "name": "@dungeonmaster/mcp",
  "version": "0.1.0",
  "description": "MCP server for discovering utilities, brokers, and standards across the codebase",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./brokers": {
      "import": "./dist/brokers.js",
      "require": "./dist/brokers.js",
      "types": "./dist/brokers.d.ts"
    },
    "./testing": {
      "import": "./dist/testing.js",
      "require": "./dist/testing.js",
      "types": "./dist/testing.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "dev": "tsx watch src/index.ts",
    "mcp:dev": "npx @modelcontextprotocol/inspector ./start-server.sh"
  },
  "dependencies": {
    "@dungeonmaster/eslint-plugin": "*",
    "@dungeonmaster/orchestrator": "*",
    "@dungeonmaster/shared": "*",
    "@dungeonmaster/ward": "*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "glob": "^10.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0"
  }
}
