{
  "name": "@dungeonmaster/tooling",
  "version": "1.0.0",
  "description": "Development tools for code quality analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "detect-duplicate-primitives": "./dist/startup/start-primitive-duplicate-detection.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "ward": "dungeonmaster-ward run",
    "detect-duplicates": "tsx src/index.ts"
  },
  "dependencies": {
    "@dungeonmaster/shared": "*",
    "glob": "^10.3.10",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@dungeonmaster/testing": "*",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.3"
  }
}
