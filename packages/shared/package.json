{
  "name": "@questmaestro/shared",
  "version": "0.1.0",
  "description": "Shared contracts and utilities for Questmaestro packages",
  "exports": {
    "./contracts": {
      "import": "./dist/contracts.js",
      "require": "./dist/contracts.js",
      "types": "./dist/contracts.d.ts"
    },
    "./guards": {
      "import": "./dist/guards.js",
      "require": "./dist/guards.js",
      "types": "./dist/guards.d.ts"
    },
    "./transformers": {
      "import": "./dist/transformers.js",
      "require": "./dist/transformers.js",
      "types": "./dist/transformers.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "ward": "bash -c 'FILES=$(fd --glob \"$1\" src); FILE_PATTERN=$(echo \"$FILES\" | tr \" \" \"|\" | sed \"s/|$//\"); echo \"=== LINT: $1 ===\"  && (npx eslint $FILES --fix 2>&1 | grep -A 999999 -E \"$FILE_PATTERN\" || echo \"No lint issues\"); echo \"\" && echo \"=== TYPECHECK: $1 ===\" && npx tsc --noEmit 2>&1 | grep -E \"$FILE_PATTERN\" || echo \"No type errors\"' --"
  },
  "keywords": [
    "questmaestro",
    "contracts",
    "zod",
    "validation",
    "typescript"
  ],
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@questmaestro/testing": "*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
