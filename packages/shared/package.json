{
  "name": "@dungeonmaster/shared",
  "version": "0.1.0",
  "description": "Shared contracts and utilities for Dungeonmaster packages",
  "exports": {
    "./contracts": {
      "import": "./dist/contracts.js",
      "require": "./dist/contracts.js",
      "types": "./dist/contracts.d.ts"
    },
    "./guards": {
      "import": "./dist/guards.js",
      "require": "./dist/guards.js",
      "types": "./dist/guards.d.ts"
    },
    "./transformers": {
      "import": "./dist/transformers.js",
      "require": "./dist/transformers.js",
      "types": "./dist/transformers.d.ts"
    },
    "./@types": {
      "import": "./dist/@types.js",
      "require": "./dist/@types.js",
      "types": "./dist/@types.d.ts"
    },
    "./statics": {
      "import": "./dist/statics.js",
      "require": "./dist/statics.js",
      "types": "./dist/statics.d.ts"
    },
    "./brokers": {
      "import": "./dist/brokers.js",
      "require": "./dist/brokers.js",
      "types": "./dist/brokers.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters.js",
      "require": "./dist/adapters.js",
      "types": "./dist/adapters.d.ts"
    },
    "./errors": {
      "import": "./dist/errors.js",
      "require": "./dist/errors.js",
      "types": "./dist/errors.d.ts"
    },
    "./testing": {
      "import": "./dist/testing.js",
      "require": "./dist/testing.js",
      "types": "./dist/testing.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "dungeonmaster-ward run --only test",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "typecheck": "dungeonmaster-ward run --only typecheck",
    "lint": "dungeonmaster-ward run --only lint"
  },
  "keywords": [
    "dungeonmaster",
    "contracts",
    "zod",
    "validation",
    "typescript"
  ],
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@dungeonmaster/testing": "*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
