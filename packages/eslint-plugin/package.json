{
  "name": "@dungeonmaster/eslint-plugin",
  "version": "0.1.0",
  "description": "ESLint plugin enforcing Dungeonmaster architecture standards with custom rules for Zod contracts, folder structure, and type safety",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "configs/**/*"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./tsconfig": "./configs/tsconfig.json",
    "./config": "./configs/eslint.dungeonmaster.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/startup/*.js 2>/dev/null || true",
    "build:clean": "rm -rf dist && npm run build",
    "test": "dungeonmaster-ward run --only test",
    "test:unit": "jest --testPathIgnorePatterns='\\.integration\\.'",
    "lint": "dungeonmaster-ward run --only lint",
    "typecheck": "dungeonmaster-ward run --only typecheck"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "typescript",
    "zod",
    "architecture",
    "dungeonmaster",
    "type-safety",
    "folder-structure"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@dungeonmaster/shared": "*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@dungeonmaster/testing": "*",
    "@typescript-eslint/parser": "^8.45.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
