{
  "name": "questmaestro",
  "version": "0.1.0-beta.1",
  "description": "A fun, quest-driven AI orchestration system for Claude that makes context windows work better",
  "bin": {
    "questmaestro": "./dist/src/cli.js",
    "questmaestro-setup": "./dist/bin/install.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/v1/commands dist/src/ && chmod +x dist/src/cli.js && chmod +x dist/bin/install.js",
    "build:clean": "rm -rf dist && npm run build",
    "prepare": "npm run build",
    "test": "jest",
    "test:unit": "jest",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "ward:all": "npm run lint && npm run typecheck && npm run test",
    "claude": "claude",
    "claude:version": "claude --version",
    "tegrity": "npm run build:clean && npm run lint && npm run test",
    "spike": "plan/spike/claude-interactive/joke-file-watcher.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/questmaestro.git"
  },
  "keywords": [
    "claude",
    "ai",
    "orchestration",
    "context-management",
    "quest",
    "slash-commands"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
