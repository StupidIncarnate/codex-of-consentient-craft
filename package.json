{
  "name": "dungeonmaster",
  "version": "0.1.0-beta.1",
  "description": "A fun, quest-driven AI orchestration system for Claude that makes context windows work better",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:clean": "npm run build:clean --workspaces",
    "test": "dungeonmaster-ward run --only test",
    "lint": "dungeonmaster-ward run --only lint",
    "typecheck": "dungeonmaster-ward run --only typecheck",
    "ward": "dungeonmaster-ward run",
    "ward:changed": "dungeonmaster-ward run --changed",
    "dev": "npm run dev:kill; [ -f .env ] && set -a && . ./.env && set +a; DUNGEONMASTER_ENV=dev npm run dev --workspace=@dungeonmaster/server & [ -f .env ] && set -a && . ./.env && set +a; DUNGEONMASTER_ENV=dev npm run dev --workspace=@dungeonmaster/web & wait",
    "dev:kill": "[ -f .env ] && set -a && . ./.env && set +a; P=${DUNGEONMASTER_PORT:-4737}; lsof -ti :$P -ti :$((P+1)) | xargs -r kill -9 2>/dev/null; echo \"Killed existing dev instances on ports $P and $((P+1))\"",
    "postinstall": "node scripts/worktree-env-setup.js",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "claude": "claude",
    "claude:version": "claude --version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dungeonmaster.git"
  },
  "keywords": [
    "claude",
    "ai",
    "orchestration",
    "context-management",
    "quest",
    "slash-commands"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@dungeonmaster/cli": "*",
    "@dungeonmaster/config": "*",
    "@dungeonmaster/eslint-plugin": "*",
    "@dungeonmaster/hooks": "*",
    "@dungeonmaster/mcp": "*",
    "@dungeonmaster/orchestrator": "*",
    "@dungeonmaster/server": "*",
    "@dungeonmaster/shared": "*",
    "@dungeonmaster/standards": "*",
    "@dungeonmaster/testing": "*",
    "@dungeonmaster/tooling": "*",
    "@dungeonmaster/ward": "*",
    "@dungeonmaster/web": "*",
    "@types/ioredis": "^4.28.10",
    "ioredis": "^5.7.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.58.2",
    "@types/debug": "^4.1.12",
    "@types/eslint": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "node-pty": "^1.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
