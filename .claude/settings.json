{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx $CLAUDE_PROJECT_DIR/packages/hooks/src/pre-edit-lint/pre-edit-hook.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": []
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(npm install:*)",
      "Bash(npm test)",
      "Bash(rm:*)",
      "Bash(node:*)",
      "Bash(npm test:*)",
      "Bash(ls:*)",
      "Write",
      "Bash(find:*)",
      "Bash(npm run:*)",
      "mcp__ide__getDiagnostics",
      "Bash(done)",
      "Bash(tree:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(exit 0)",
      "Bash(true)",
      "Bash(env)",
      "Bash(claude config:*)",
      "Bash(npx tsc:*)",
      "Bash(npx ts-node:*)",
      "Bash(npx eslint:*)",
      "Bash(cat:*)",
      "WebFetch(domain:docs.anthropic.com)"
    ],
    "deny": []
  }
}