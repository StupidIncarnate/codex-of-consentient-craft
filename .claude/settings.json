{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx $CLAUDE_PROJECT_DIR/packages/hooks/src/startup/start-pre-edit-hook.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx $CLAUDE_PROJECT_DIR/packages/hooks/src/startup/start-post-edit-hook.ts"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(npm install:*)",
      "Bash(npm test)",
      "Bash(rm:*)",
      "Bash(node:*)",
      "Bash(npm test:*)",
      "Bash(ls:*)",
      "Write",
      "Bash(find:*)",
      "Bash(npm run:*)",
      "mcp__ide__getDiagnostics",
      "Bash(tree:*)",
      "WebFetch(domain:*)",
      "Bash(env)",
      "Bash(claude config:*)",
      "Bash(npx tsc:*)",
      "Bash(npx ts-node:*)",
      "Bash(npx eslint:*)",
      "mcp__questmaestro__get-architecture",
      "mcp__questmaestro__get-syntax-rules",
      "mcp__questmaestro__get-folder-detail",
      "mcp__questmaestro__get-testing-patterns",
      "mcp__questmaestro__discover"
    ],
    "deny": ["Bash(cat:*)", "Bash(sed:*)"]
  }
}